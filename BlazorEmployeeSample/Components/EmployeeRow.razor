@using BlazorEmployeeSample.Models

@if (Employee != null)
{
    <div class="row">
        <div class="col-1">
            @Employee.EmployeeId
        </div>
        <div class="col-3">
            <a href="edit/@Employee.EmployeeId">@Employee.LastName, @Employee.FirstName</a>
        </div>
        <div class="col">
            @Employee.HireDate.GetValueOrDefault().ToShortDateString()
        </div>
    </div>
}

@code {
    [Parameter]
    public Employee? Employee { get; set; } = new Employee();
}
